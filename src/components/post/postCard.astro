---
import type { postType } from "../../content/posts/config";
import style from "../../styles/components/card.module.css";
import DateTime from "./dateTime.astro";
const post: postType = Astro.props.data.data;
const slug: string = Astro.props.data.slug;
---

<div class={style.card}>
    <a href={`./post/${slug}`}>
        <h2>{post.title}</h2>
        <DateTime pubDate={post.pubDate} modDate={post.modDate} mini={true} />
        <p>{post.description}</p>
    </a>
</div>
